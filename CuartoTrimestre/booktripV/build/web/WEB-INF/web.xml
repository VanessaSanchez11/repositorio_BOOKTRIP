    <servlet-mapping>
        <servlet-name>actualizarUser</servlet-name>
        <url-pattern>/actualizarUser</url-pattern>
    </servlet-mapping>
    
    
    <!-- sevlet de roles  -->
    
    <servlet>
        <servlet-name>registroRol</servlet-name>
        <servlet-class>servlet.registroRol</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registroRol</servlet-name>
